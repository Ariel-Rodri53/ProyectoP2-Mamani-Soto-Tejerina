<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600.0" prefWidth="1000.0" styleClass="root" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tienda.controlador.ControladorCompras">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10.0" styleClass="vbox">
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </padding>
            <Label styleClass="label" text="Buscar:" />
            <TextField fx:id="campoBusqueda" prefWidth="300.0" promptText="ID Compra o Nombre Proveedor" />
            <Button fx:id="botonBuscar" text="Buscar" />
            <Region HBox.hgrow="ALWAYS" />
        </HBox>
    </top>
    <center>
        <VBox fx:id="tablaContainer" minHeight="200.0" prefHeight="144.0" VBox.vgrow="ALWAYS">
            <TableView fx:id="tablaCompras" minHeight="200.0" prefHeight="144.0" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="columnaIdCompra" minWidth="80.0" prefWidth="100.0" text="ID Compra" />
                    <TableColumn fx:id="columnaNombreProveedor" minWidth="100.0" prefWidth="200.0" text="Proveedor" />
                    <TableColumn fx:id="columnaFechaRegistro" minWidth="100.0" prefWidth="150.0" text="Fecha Registro" />
                    <TableColumn fx:id="columnaTotalCompra" minWidth="80.0" prefWidth="100.0" text="Total" />
                </columns>
            </TableView>
        </VBox>
    </center>
    <bottom>
        <VBox fx:id="formContainer" minHeight="200.0" prefHeight="396.0" spacing="10.0" styleClass="vbox" VBox.vgrow="ALWAYS">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <Label styleClass="header" text="Gestión de Compra" />
            <HBox spacing="10.0" HBox.hgrow="ALWAYS">
                <!-- Columna 1: Proveedor -->
                <VBox fx:id="infoProveedor" prefWidth="300.0" spacing="5.0" styleClass="vbox" HBox.hgrow="ALWAYS">
                    <Label styleClass="subheader" text="Proveedor" />
                    <GridPane hgap="5.0" vgap="2.0">
                        <columnConstraints>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0" />
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="150.0" />
                        </columnConstraints>
                        <Label text="Proveedor:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                        <ComboBox fx:id="comboProveedor" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                    </GridPane>
                </VBox>
                <!-- Columna 2: Productos -->
                <VBox fx:id="detallesProductos" prefWidth="300.0" spacing="5.0" styleClass="vbox" HBox.hgrow="ALWAYS">
                    <Label styleClass="subheader" text="Agregar Producto" />
                    <GridPane hgap="5.0" vgap="2.0">
                        <columnConstraints>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0" />
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="150.0" />
                        </columnConstraints>
                        <Label text="Producto:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                        <ComboBox fx:id="comboProducto" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                        <Label text="Cantidad:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                        <TextField fx:id="campoCantidad" promptText="Ej. 1" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <Label text="Costo Unitario:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                        <TextField fx:id="campoCostoUnitario" promptText="Ej. 0.00" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                    </GridPane>
                    <HBox spacing="10.0">
                        <Button fx:id="botonAgregarProducto" onAction="#agregarProducto" text="Agregar" />
                        <Button fx:id="botonQuitarProducto" onAction="#quitarProducto" text="Quitar" />
                    </HBox>
                </VBox>
                <!-- Columna 3: Total -->
                <VBox fx:id="total" prefWidth="300.0" spacing="5.0" styleClass="vbox" HBox.hgrow="ALWAYS">
                    <Label styleClass="subheader" text="Total" />
                    <Label fx:id="labelTotalCompra" text="Total Compra: $0.00" styleClass="label" />
                </VBox>
            </HBox>
            <TableView fx:id="tablaDetalles" prefHeight="100.0">
                <columns>
                    <TableColumn fx:id="columnaCodigoProducto" minWidth="80.0" prefWidth="100.0" text="Código" />
                    <TableColumn fx:id="columnaDescripcionProducto" minWidth="100.0" prefWidth="200.0" text="Descripción" />
                    <TableColumn fx:id="columnaCantidad" minWidth="50.0" prefWidth="80.0" text="Cantidad" />
                    <TableColumn fx:id="columnaCostoUnitario" minWidth="80.0" prefWidth="100.0" text="Costo Unit." />
                    <TableColumn fx:id="columnaSubtotal" minWidth="80.0" prefWidth="100.0" text="Subtotal" />
                </columns>
            </TableView>
            <HBox alignment="CENTER" minHeight="50.0" prefHeight="60.0" spacing="10.0" styleClass="vbox">
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </padding>
                <Button fx:id="botonNuevo" onAction="#nuevaCompra" text="Nuevo" />
                <Button fx:id="botonGuardar" onAction="#guardarCompra" text="Guardar" />
                <Button fx:id="botonCancelar" onAction="#cancelar" text="Cancelar" />
            </HBox>
        </VBox>
    </bottom>
</BorderPane>