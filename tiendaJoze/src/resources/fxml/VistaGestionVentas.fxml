<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600.0" prefWidth="1000.0" styleClass="root" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tienda.controlador.ControladorVentas">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10.0" styleClass="vbox">
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </padding>
            <Label styleClass="label" text="Buscar:" />
            <TextField fx:id="campoBusqueda" prefWidth="300.0" promptText="ID Venta o Nombre Cliente" />
            <Button fx:id="botonBuscar" onAction="#buscarVenta" text="Buscar" />
            <Region HBox.hgrow="ALWAYS" />
            <Label styleClass="label" text="Filtrar por estado:" />
            <ComboBox fx:id="comboFiltroEstado" prefWidth="150.0" />
        </HBox>
    </top>
    <center>
        <VBox fx:id="tablaContainer" minHeight="200.0" prefHeight="144.0" VBox.vgrow="ALWAYS">
            <TableView fx:id="tablaVentas" minHeight="200.0" prefHeight="144.0" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="columnaIdVenta" minWidth="80.0" prefWidth="100.0" text="ID Venta" />
                    <TableColumn fx:id="columnaNombreCliente" minWidth="100.0" prefWidth="200.0" text="Cliente" />
                    <TableColumn fx:id="columnaFechaRegistro" minWidth="100.0" prefWidth="150.0" text="Fecha Registro" />
                    <TableColumn fx:id="columnaTotalVenta" minWidth="80.0" prefWidth="100.0" text="Total" />
                    <TableColumn fx:id="columnaMetodoPago" minWidth="80.0" prefWidth="100.0" text="Método Pago" />
                    <TableColumn fx:id="columnaEstado" minWidth="80.0" prefWidth="100.0" text="Estado" />
                </columns>
            </TableView>
        </VBox>
    </center>
    <bottom>
        <VBox fx:id="formContainer" minHeight="200.0" prefHeight="396.0" spacing="10.0" styleClass="vbox" VBox.vgrow="ALWAYS">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <Label styleClass="header" text="Gestión de Venta" />
            <HBox spacing="10.0" HBox.hgrow="ALWAYS">
                <!-- Columna 1: Cliente y Método de Pago -->
                <VBox fx:id="infoCliente" prefWidth="300.0" spacing="5.0" styleClass="vbox" HBox.hgrow="ALWAYS">
                    <Label styleClass="subheader" text="Cliente y Pago" />
                    <GridPane hgap="5.0" vgap="2.0">
                        <columnConstraints>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0" />
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="150.0" />
                        </columnConstraints>
                        <Label text="Cliente:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                        <ComboBox fx:id="comboCliente" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                        <Label text="Método de Pago:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                        <ComboBox fx:id="comboMetodoPago" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <Label text="Estado:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                        <ComboBox fx:id="comboEstadoVenta" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                        <rowConstraints>
                            <RowConstraints />
                            <RowConstraints />
                            <RowConstraints />
                        </rowConstraints>
                    </GridPane>
                </VBox>
                <!-- Columna 2: Productos -->
                <VBox fx:id="detallesProductos" prefWidth="300.0" spacing="5.0" styleClass="vbox" HBox.hgrow="ALWAYS">
                    <Label styleClass="subheader" text="Agregar Producto" />
                    <GridPane hgap="5.0" vgap="2.0">
                        <columnConstraints>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0" />
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="150.0" />
                        </columnConstraints>
                        <Label text="Producto:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                        <ComboBox fx:id="comboProducto" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                        <Label text="Cantidad:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                        <TextField fx:id="campoCantidad" promptText="Ej. 1" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <Label text="Descuento (%):" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                        <TextField fx:id="campoDescuento" promptText="Ej. 0.00" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                        <rowConstraints>
                            <RowConstraints />
                            <RowConstraints />
                            <RowConstraints />
                        </rowConstraints>
                    </GridPane>
                    <HBox spacing="10.0">
                        <Button fx:id="botonAgregarProducto" onAction="#agregarProducto" text="Agregar" />
                        <Button fx:id="botonQuitarProducto" onAction="#quitarProducto" text="Quitar" />
                    </HBox>
                </VBox>
                <!-- Columna 3: Total -->
                <VBox fx:id="total" prefWidth="300.0" spacing="5.0" styleClass="vbox" HBox.hgrow="ALWAYS">
                    <Label styleClass="subheader" text="Total" />
                    <Label fx:id="labelTotalVenta" text="Total Venta: $0.00" styleClass="label" />
                </VBox>
            </HBox>
            <TableView fx:id="tablaDetalles" prefHeight="100.0">
                <columns>
                    <TableColumn fx:id="columnaCodigoProducto" minWidth="80.0" prefWidth="100.0" text="Código" />
                    <TableColumn fx:id="columnaDescripcionProducto" minWidth="100.0" prefWidth="200.0" text="Descripción" />
                    <TableColumn fx:id="columnaCantidad" minWidth="50.0" prefWidth="80.0" text="Cantidad" />
                    <TableColumn fx:id="columnaPrecioUnitario" minWidth="80.0" prefWidth="100.0" text="Precio Unit." />
                    <TableColumn fx:id="columnaDescuento" minWidth="80.0" prefWidth="100.0" text="Descuento (%)" />
                    <TableColumn fx:id="columnaSubtotal" minWidth="80.0" prefWidth="100.0" text="Subtotal" />
                </columns>
            </TableView>
            <!-- Botones de acción -->
            <HBox alignment="CENTER" minHeight="50.0" prefHeight="60.0" spacing="10.0" styleClass="vbox">
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </padding>
                <Button fx:id="botonNuevo" onAction="#nuevoVenta" text="Nuevo" />
                <Button fx:id="botonGuardar" onAction="#guardarVenta" text="Guardar" />
                <Button fx:id="botonEditar" onAction="#editarVenta" text="Editar" />
                <Button fx:id="botonEliminar" onAction="#eliminarVenta" text="Cancelar Venta" />
                <Button fx:id="botonCancelar" onAction="#cancelar" text="Cancelar" />
            </HBox>
        </VBox>
    </bottom>
</BorderPane>